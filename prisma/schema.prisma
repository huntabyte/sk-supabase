generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id String @id @default(uuid())

  username  String?
  firstName String?
  lastName  String?
  website   String?
  avatarUrl String?

  updated_at DateTime? @updatedAt
  items      Item[]

  @@map("profiles")
}

model Item {
  id String @id @default(uuid())

  name String

  user   Profile @relation(fields: [userId], references: [id])
  userId String
}
